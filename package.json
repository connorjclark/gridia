    "wavefunctioncollapse": "^2.1.0",
    "wrtc": "^0.4.7",
    "ws": "8.3.0",
    "yargs": "^13.2.2"
  },
  "engines": {
    "node": "17.2.0"
  },
  "engineStrict": true,
  "scripts": {
    "build": "yarn build-client",
    "build-prod": "NODE_ENV=production yarn build-client",
    "build-client": "node build/build-client.js",
    "convert": "yarn ts-node src/convert-rpgwo/convert.ts",
    "run-server": "GOOGLE_APPLICATION_CREDENTIALS=$PWD/deploy/firebase-service-key.json GRIDIA_EXECUTION_ENV=node yarn ts-node src/server/run.ts",
    "run-server-no-firebase": "GRIDIA_EXECUTION_ENV=node yarn ts-node src/server/run.ts",
    "run-static-server": "http-server dist/client -c-1",
    "clean": "rm -rf dist",
    "watch": "concurrently --kill-others --names Server,Client,Static --prefix name \"yarn watch-server\" \"yarn watch-client\" \"yarn run-static-server > /dev/null\"",
    "watch-no-server": "concurrently --kill-others --names Client,Static --prefix name \"yarn watch-client\" \"yarn run-static-server > /dev/null\"",
    "watch-client": "chokidar --initial src -c 'yarn build-client'",
    "watch-server": "chokidar --initial 'src/*.ts' 'src/server/**/*.ts' -c 'pkill -f \"yarn.js run-server\" ; yarn run-server'",
    "type-check": "tsc --noEmit",
    "lint": "eslint '{src,test,build}/**/*.{ts,tsx,js,jsx}'",
    "test": "yarn lint && yarn type-check && yarn mocha 'test/*.test.ts'",
    "ts-node": "TS_NODE_TRANSPILE_ONLY=1 node --loader ts-node/esm",
    "mocha": "cp node_modules/mocha/bin/mocha node_modules/mocha/bin/mocha.js && yarn ts-node node_modules/mocha/bin/mocha.js"
  },
  "devDependencies": {
    "@chialab/esbuild-plugin-html": "^0.12.2",
    "@esbuild-plugins/node-globals-polyfill": "^0.1.1",
    "@types/d3-delaunay": "^4.1.0",
    "@types/d3-polygon": "^2.0.0",
    "@types/glob": "^7.1.3",
    "@types/json-schema": "^7.0.9",
    "@types/level": "^6.0.0",
    "@types/luxon": "^2.0.9",
    "@types/mocha": "^9.0.0",
    "@types/node-cleanup": "^2.1.1",
    "@types/offscreencanvas": "^2019.6.3",
    "@types/seedrandom": "^2.4.28",
    "@types/uuid": "^8.3.0",
    "@types/wicg-file-system-access": "^2020.9.1",
    "@types/ws": "^8.2.2",
    "@typescript-eslint/eslint-plugin": "^5.10.1",
    "@typescript-eslint/eslint-plugin-tslint": "^5.10.1",
    "@typescript-eslint/parser": "^5.10.1",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^7.0.0",
    "esbuild": "^0.14.2",
    "esbuild-node-builtins": "^0.1.0",
    "eslint": "^7.16.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsdoc": "^30.7.9",
    "eslint-plugin-prefer-arrow": "^1.2.2",
    "expect": "^27.4.6",
    "glob": "^7.1.6",
    "http-server": "^14.1.0",
    "mocha": "^9.1.4",
    "puppeteer": "^13.1.1",
    "ts-node": "^10.4.0",
    "tslint": "^6.1.3",
    "typescript": "4.5.5",
    "typescript-json-schema": "^0.53.0"
  }
}
