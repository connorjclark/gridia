    "idb-keyval": "^5.0.4",
    "js-bbcode-parser": "^3.0.4",
    "json-schema": "^0.4.0",
    "level": "^7.0.0",
    "linkstate": "^1.1.1",
    "luxon": "^2.3.0",
    "node-cleanup": "^2.1.2",
    "panzoom": "^9.4.2",
    "pixi-sound": "^3.0.5",
    "pixi.js": "^6.2.1",
    "preact": "^10.6.4",
    "redux-zero": "^5.1.7",
    "seedrandom": "^3.0.5",
    "source-map-support": "^0.5.12",
    "strict-event-emitter-types": "^2.0.0",
    "typed.js": "^2.0.11",
